<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/receiveLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bamboobackground"
    tools:context=".ReceiveMessage">

    <TextView
        android:id="@+id/receiveTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/bad_script"
        android:text="Receive"
        android:textColor="@android:color/widget_edittext_dark"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receiveDirections"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:text="Directions: Wait for your phone to buzz to receive some morse code!"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiveTitle" />

    <ImageButton
        android:id="@+id/receiveHomeButton"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiveDirections"
        app:layout_constraintVertical_bias="0.95"
        app:srcCompat="@drawable/bamboobutton" />

    <TextView
        android:id="@+id/receiveHomeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/croissant_one"
        android:gravity="center"
        android:text="Home"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/receiveHomeButton"
        app:layout_constraintEnd_toEndOf="@+id/receiveHomeButton"
        app:layout_constraintStart_toStartOf="@+id/receiveHomeButton"
        app:layout_constraintTop_toTopOf="@+id/receiveHomeButton" />
</android.support.constraint.ConstraintLayout>